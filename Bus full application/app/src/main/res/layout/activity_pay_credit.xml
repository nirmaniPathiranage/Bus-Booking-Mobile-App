<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="3dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginStart="180dp"
            android:layout_marginTop="@dimen/fab_margin"
            app:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/dash" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@color/transparent"
        android:layout_marginTop="80dp"
        android:gravity="center">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/design_default_color_primary"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/grey"
            app:strokeWidth="5dp">


            <Button
                android:id="@+id/button2"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="480dp"
                android:clickable="true"
                android:background="@drawable/button"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:pointerIcon="hand"
                android:text="Submit"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="220dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/input_field"
                android:drawableLeft="@drawable/mastercard"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Card Number"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/lightGrey"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="220dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="377dp"
                android:background="@drawable/input_field"
                android:drawableLeft="@drawable/name"
                android:ems="10"
                android:hint="Enter CVC Number"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/lightGrey"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/editText3"
                android:layout_width="220dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/input_field"
                android:drawableLeft="@drawable/usernew"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Enter the Name on card"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/lightGrey"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/month"

                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="321dp"
                android:background="@drawable/input_field"
                android:ems="10"
                android:entries="@array/months"
                android:inputType="date" />

            <Spinner
                android:id="@+id/year"

                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="192dp"
                android:layout_marginStart="192dp"
                android:layout_marginTop="322dp"
                android:background="@drawable/input_field"
                android:ems="10"
                android:entries="@array/dates"
                android:inputType="date" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="34dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/feedbutton"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:background="@color/delete"
                android:drawableLeft="@drawable/ic_warning_black_24dp"
                android:text="Complete Before 2019-09-16 At 8.30PM"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="250dp"
                android:text="Expiry Date"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="220dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="429dp"
                android:background="@drawable/input_field"
                android:gravity="center"
                android:text="Amount : 1200 LKR"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="280dp"
                android:text="Months"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="280dp"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" /><![CDATA[

        />

    ]]>
</com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

</RelativeLayout>