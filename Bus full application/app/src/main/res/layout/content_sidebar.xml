<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sidebar"
    android:background="@drawable/backcontact"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/background_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id="@+id/textViewSidebar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:background="@android:color/background_light"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/dash"
                android:gravity="center"
                android:text="@string/Home"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:alignmentMode="alignMargins"
                android:background="@android:color/transparent"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="6">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    android:background="@color/buscolor"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="3dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <ImageView
                            android:id="@+id/feedback"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/satisfaction" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="View Feeds"
                            android:textColor="@color/common_google_signin_btn_text_light_default"
                            android:textSize="18sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="3dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <ImageView
                            android:id="@+id/bookseat"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/tick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="Booking"
                            android:textColor="@color/common_google_signin_btn_text_light_default"
                            android:textSize="18sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="3dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <ImageView
                            android:id="@+id/journeys"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/map" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="Our Journeys"
                            android:textColor="@color/common_google_signin_btn_text_light_default"
                            android:textSize="18sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="3dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <ImageView
                            android:id="@+id/bustype"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bbb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="Bus Types"
                            android:textColor="@color/common_google_signin_btn_text_light_default"
                            android:textSize="18sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    android:background="@color/colorAccent"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="3dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <ImageView
                            android:id="@+id/suggestions"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/gra" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="Suggestions"
                            android:textColor="@color/common_google_signin_btn_text_light_default"
                            android:textSize="18sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="3dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <ImageView
                            android:id="@+id/productlist"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="Our Products"
                            android:textColor="@color/common_google_signin_btn_text_light_default"
                            android:textSize="18sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    android:background="@color/buscolor"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="3dp"
                    app:cardElevation="6dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <ImageView
                            android:id="@+id/achievement"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/trophy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="Awards"
                            android:textColor="@color/common_google_signin_btn_text_light_default"
                            android:textSize="18sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_rowWeight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/grey"
                    app:strokeWidth="3dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <ImageView
                            android:id="@+id/settings"
                            android:layout_width="50dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/settings" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="Settings"
                            android:textColor="@color/common_google_signin_btn_text_light_default"
                            android:textSize="18sp" />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>


            </GridLayout>


        </LinearLayout>
    </ScrollView>




