<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitingListBus"
    android:background="@drawable/backcontact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                app:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/dash" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="275dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"

            android:layout_marginTop="8dp"
            android:text="Waiting list for Colombo to Galle Subscribe to the bus waiting list. You will be informed if we can get you a seat"
            android:textColor="#d5cada"
            android:textSize="17dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="324dp"
            android:layout_height="486dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="#ddffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="163dp"
                android:layout_height="42dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="304dp"
                android:background="@drawable/feeddelete"
                android:text="Subscribe"
                android:textColor="#000000"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.131"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.651" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="279dp"
                android:layout_height="42dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/input_field"

                android:drawableLeft="@drawable/n"
                android:ems="10"
                android:hint="   Type a city"
                android:inputType="textPersonName"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/editText4"
                android:layout_width="278dp"
                android:layout_height="44dp"
                android:layout_marginBottom="256dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/input_field"
                android:drawableLeft="@drawable/smartphone"
                android:ems="10"
                android:hint="    07xxxxxxxx"
                android:inputType="textVisiblePassword|phone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="273dp"
                android:layout_height="44dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="260dp"
                android:background="@drawable/input_field"
                android:drawableLeft="@drawable/name"
                android:ems="10"

                android:hint="   NIC or Passport No"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/editText6"
                android:layout_width="279dp"
                android:layout_height="41dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="116dp"
                android:background="@drawable/input_field"
                android:drawableLeft="@drawable/email"
                android:ems="10"
                android:hint="   abc@xy.com"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="336dp"

                android:background="@drawable/input_field"
                android:ems="10"
                android:hint="   1"
                android:inputType="number"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="151dp"
                android:layout_height="36dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="151dp"
                android:layout_height="41dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="92dp"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="151dp"
                android:layout_height="41dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="164dp"
                android:text="Phone Number"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="161dp"
                android:layout_height="41dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="236dp"
                android:text="NIC / Passport Number"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="151dp"
                android:layout_height="41dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="316dp"
                android:text="No of seats"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>